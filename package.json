{
  "name": "gql-test",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodkz/graphql-typescript-boilerplate.git"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playlyfe/gql": "^2.6.1",
    "@types/jest": "^23.3.12",
    "apollo": "^2.3.0",
    "babel-eslint": "9.0.0",
    "concurrently": "^4.1.0",
    "eslint": "5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.4.0",
    "eslint-plugin-graphql": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "rxjs": "6.2.2",
    "rxjs-compat": "6.2.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-graphql": "^0.0.6",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.2"
  },
  "husky-DISABLED": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.graphql": [
      "prettier --parser graphql --write",
      "git add"
    ]
  },
  "scripts": {
    "lint": "npm run eslint && npm run tslint",
    "eslint": "eslint --fix --ext js --ext jsx .",
    "tslint": "tslint --fix -p tsconfig.json -c tslint.json",
    "apollo-gen": "apollo client:codegen --target=typescript --localSchemaFile=server/src/schema/__generated__/schema.graphql --includes=./client/src/**/*.{ts,tsx} --tagName gql",
    "watch-old": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Server,ServerGCG,Client,ClientGCG\" -c \"green.bold,yellow.bold,magenta.bold,blue.bold,cyan.bold\" \"cd ./server && npm run watch-ts\" \"cd ./server && npm run watch-node\" \"cd ./server && npm run watch-gcg\" \"cd ./client && npm run start \" \"cd ./client && npm run watch-gcg \"",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Server,ServerGCG,Client,ClientGCG\" -c \"green.bold,yellow.bold,magenta.bold,blue.bold,cyan.bold\" \"cd ./server && npm run watch-ts\" \"cd ./server && npm run watch-node\" \"cd ./server && npm run watch-gcg\" \"cd ./client && npm run start \""
  }
}
