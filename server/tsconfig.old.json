{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "lib": ["es2015", "esnext.asynciterable"],
      "noImplicitAny": true,
      "moduleResolution": "node",
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
      }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/__tests__/**"
  ]
}